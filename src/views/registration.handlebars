<div>
    <div class="heading d-flex align-items-center" style="height: 100px; background-color: tomato;">
        <h1 style="padding-left: 75px; color: white;">Registration</h1>
    </div>
</div>

<section class="primary-data" id="firstStep" style="margin-top: 50px; margin-bottom: 70px;">
    <h3 style="padding-bottom: 20px; padding-left: 70px; color: rgb(255, 51, 0);">
        Identity Varification
    </h3>
    <div class="registration-body">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4>Unique Identity Type :</h4>
                    <select id="regMethodId" class="form-select" style="width: 300px;">
                        <option selected value="none">--SELECT A REGISTRATION METHOD</option>
                        <option value="NID">National ID Card</option>
                        <option value="BCF">Birth Reg. Certificate</option>
                    </select>
                </div>
                <!--TODO : HAVE TO OPEN REST OF THE SECTION AFTER THE THE PREVIOUS STEPS ARE DONE-->
                <div class="col" >
                    <div id="row">
                        <div id="categoryId" hidden class="column-element" >
                            <h5>Select Type :</h5>
                            <select id ="selectCategoryId" class="form-select" style="width: 300px;">
                                <option selected value="0">--Select--</option>
                                {{#each category}}
                                <option value="{{id}}">{{title}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div id="subCategoryId" hidden class="column-element" >
                            <h5>Select Sub Type :</h5>
                            <select id ="selectSubCategoryId" class="form-select" style="width: 300px;">
                                <option selected value="0">--Select--</option>
                            </select>
                        </div>
                    </div>
                    <div id="row" >
                        <div id="nidCol" class="column-element"  hidden style="width: 300px;">
                            <h5>NID Number :</h5>
                            <input type="number" id="nid" name="nid" class="form-control"
                                   placeholder="Example - 19825624603112948" maxlength="13" autocomplete="off">
                        </div>
                        <div id="bcfCol" class="column-element" hidden style="width: 300px;">
                            <h5>Birth Registration Number :</h5>
                            <input type="number" id="bcf" name="bcf" class="form-control"
                                   placeholder="Example - 19825624603112948" maxlength="17" autocomplete="off">
                        </div>
                        <div id="dobCol"class="column-element" hidden>
                            <h5>Date of Birth :</h5>
                            <input type="date" id="dob" name="dob" required>
                            <button class="btn-primary" type="button" id="step1btn" >Verify</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container"  id="secondStep" hidden>
    <section class="user-information" style="margin-top: 40px; margin-bottom: 70px;">
        <h3 style="padding-bottom: 20px; padding-left: 70px; color: rgb(255, 51, 0);">
            User Information
        </h3>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="column-element" style="width: 300px;">
                            <h5>Name :</h5>
                            <input type="text" id="reg-name" name="reg-name" class="form-control"
                                    autocomplete="off" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column-element" style="width: 300px;">
                            <h5>Mobile Number :</h5>
                            <input type="number" id="mobile-number" name="mobile-number" class="form-control"
                                   placeholder="Example - 01700000000" maxlength="11" required>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="column-element" style="width: 300px; margin-top: 45px;">
                        <label for="mail-id" class="form-label">
                            <h5>Email address :</h5>
                        </label>
                        <input type="email" id="mail-id" name="mail-id" class="form-control"
                               placeholder="abc@gmail.com">
                    </div>
                </div>
                <div class="col">
                    <div class="column-element" style="width: 300px; margin-top: 45px;">
                        <label for="pwd" class="form-label">
                            <h5>Password :</h5>
                        </label>
                        <input type="password" id="pwd" name="pwd" class="form-control"
                               placeholder="Enter a valid password" required>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr>
    <section class="medical-history" style="margin-top: 40px; margin-bottom: 70px;">
        <h3 style="padding-bottom: 20px; padding-left: 70px; color: rgb(255, 51, 0);">
            Medical History(Chronic diseases)
        </h3>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div style="margin-bottom: 40px;">
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>High Blood Pressure,</h5>
                                <h5>Heart diseases or Stroke</h5>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="hbp"
                                       id="flexRadioDefault1" value="yes">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="hbp"
                                       id="flexRadioDefault2" value="no" checked>
                                <label class="form-check-label" for="flexRadioDefault2">
                                    No
                                </label>
                            </div>
                        </div>

                        <div>
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>Respiratory Diseases</h5>
                                <h5>(TB, COPD, Asthma)</h5>

                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="resp"
                                       id="flexRadioDefault3" value="yes">
                                <label class="form-check-label" for="flexRadioDefault3">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="resp"
                                       id="flexRadioDefault4" value="no" checked>
                                <label class="form-check-label" for="flexRadioDefault4">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="row">
                        <div style="margin-bottom: 73px;">
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>Diabetes</h5>

                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="dbts"
                                       id="flexRadioDefault5" value="yes">
                                <label class="form-check-label" for="flexRadioDefault5">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="dbts"
                                       id="flexRadioDefault6" value="no" checked>
                                <label class="form-check-label" for="flexRadioDefault6">
                                    No
                                </label>
                            </div>
                        </div>

                        <div>
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>Cancer</h5>

                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="cancer"
                                       value="yes" id="flexRadioDefault7">
                                <label class="form-check-label" for="flexRadioDefault7">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="cancer"
                                       value="no" id="flexRadioDefault8" checked>
                                <label class="form-check-label" for="flexRadioDefault8">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="row">
                        <div style="margin-bottom: 73px;">
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>Kidney Diseases</h5>

                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="kd"
                                       value="yes" id="flexRadioDefault9">
                                <label class="form-check-label" for="flexRadioDefault9">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="kd"
                                       value="no" id="flexRadioDefault10" checked>
                                <label class="form-check-label" for="flexRadioDefault10">
                                    No
                                </label>
                            </div>
                        </div>

                        <div>
                            <div style="width: 300px; margin-bottom: 15px;">
                                <h5>Previous Covid-19 Infection</h5>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="prev_cov"
                                       value="yes" id="flexRadioDefault11">
                                <label class="form-check-label" for="flexRadioDefault11">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="prev_cov"
                                       value="no" id="flexRadioDefault12" checked>
                                <label class="form-check-label" for="flexRadioDefault12">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr>
    <section class="necessary-info" style="margin-top: 40px; margin-bottom: 70px;">
        <h3 style="padding-bottom: 20px; padding-left: 70px; color: rgb(255, 51, 0);">
            Present Adress(Required for selecting vaccination center)
        </h3>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="col-elements">
                        <div style="width: 250px; padding-bottom: 20px;">
                            <h5>Division :</h5>
                            <select id="selectDivId" class="form-select" style="width: 300px;">
                                <option disabled selected value="">--Select--</option>
                                {{#each division}}
                                    <option value="{{DIVISION}}">{{DIVISION}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="col-elements">
                        <div style="width: 250px; padding-bottom: 20px;">
                            <h5>District :</h5>
                            <select id="selectDistId" class="form-select" style="width: 300px;">
                                <option disabled selected value="">--Select--</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="col-elements">
                        <div style="width: 250px;">
                            <h5>Upazilla / Thana :</h5>
                            <select id="selectUtId" class="form-select" style="width: 300px;">
                                    <option disabled selected value="">--Select--</option>
                                </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="col-elements">
                        <div style="width: 250px; padding-bottom: 20px;">
                            <h5>City/Municipality :</h5>
                            <select id="selectCityMunId" class="form-select" style="width: 300px;">
                                <option disabled selected value="">--Select--</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="col-elements">
                        <div style="width: 250px; padding-bottom: 20px;">
                            <h5>Union/Ward :</h5>
                            <select id="selectUnwId" class="form-select" style="width: 300px;">
                                <option disabled selected value="">--Select--</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <hr>

    <section class="vaccine-location" style="margin-top: 40px; margin-bottom: 70px;">
        <h3 style="padding-bottom: 20px; padding-left: 70px; color: rgb(255, 51, 0);">
            Preferred Vaccination Center
        </h3>

        <div class="container">
            <div class="column-element">
                <h5>Select Center :</h5>
                <select id="selectCenterId" class="form-select" style="width: 300px;">
                    <option disabled selected value="">--Select--</option>
                </select>
            </div>
        </div>



    </section>
    <hr>
    <section class="vaccine-location" style="margin-top: 40px; margin-bottom: 70px;">

       <!-- <div class="form-check" style="padding-left: 75px;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                <h6>
                    I hereby declare that the information provided is true and correct.
                </h6>
            </label>
        </div>-->

        <div class="container" style="padding-top: 35px; display: flex; justify-content: center;">
            <div class="row">
                <div class="col">
                    <!--<button id="discardBtn" type="button" class="btn btn-light" style="margin-right: 15px;">Discard</button>-->
                    <button id="successBtn" type="button" class="btn btn-success">Confirm</button>
                </div>
            </div>

        </div>
    </section>
</div>
{{>footer}}


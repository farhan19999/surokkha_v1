<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3"><br>Institutional Data Entry</h4>
            <form id="entryFormId">
                <div class="row g-3">
                    <section id="typeSection">
                        <div class="col-sm-6">
                            <label for="regType" class="form-label">Select Person type :</label>
                            <select class="form-select" id="regType" name="regType" >
                                <option selected value="none">--Select--</option>
                                <option value="NID">Person to be Registered with NID </option>
                                <option value="BCF">Under 18 years old</option>
                            </select>
                        </div>
                    </section>
                    <section id="nidSection" hidden>
                        <div id="categoryId">
                            <h5>Select Type :</h5>
                            <select id ="selectCategoryId" class="form-select" name="sector_id" style="width: 300px;">
                                <option selected value="0">--Select--</option>
                                {{#each category}}
                                    <option value="{{id}}">{{title}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div id="subCategoryId" hidden>
                            <h5>Select Sub Type :</h5>
                            <select id ="selectSubCategoryId" class="form-select" name="sub_sector_id" style="width: 300px;">
                                <option selected value="0">--Select--</option>
                            </select>
                        </div>
                        <div id="nidCol" class="col-sm-6"  hidden style="width: 300px;">
                            <label for="nid" class="form-label" >NID Number :</label>
                            <input type="number" id="nid" name="nid" class="form-control"
                                   placeholder="Example - 19825624603112948" maxlength="13" autocomplete="off">
                        </div>
                    </section>
                    <section id="bcfSection" hidden>
                        <div id="bcfCol" class="col-sm-6"  style="width: 300px;">
                            <label for="bcf" class="form-label" >Birth Registration Number :</label>
                            <input type="number" id="bcf" name="bcf" class="form-control"
                                   placeholder="Example - 19825624603112948" maxlength="17" autocomplete="off">
                        </div>
                    </section>
                    <section id="general" >
                        <div id="fname" class="col-sm-6"  style="width: 300px;">
                            <label for="fname" class="form-label" >First Name :</label>
                            <input type="text" id="fname" name="fname" class="form-control"
                                   placeholder="ABC">
                        </div>
                        <div id="lname" class="col-sm-6"  style="width: 300px;">
                            <label for="lname" class="form-label" >Last Name :</label>
                            <input type="text" id="lname" name="lname" class="form-control"
                                   placeholder="DEF">
                        </div>
                        <div id="dobCol" class="col-sm-6" style="width: 300px;" >
                            <label for="dob" class="form-label" >Date of Birth :</label>
                            <input type="date" class="form-control" id="dob" name="dob">
                        </div>
                        <button class="btn btn-primary" type="button" id="submitBtn">Submit</button>
                    </section>
                </div>
            </form>
            <hr>
            <p align="center"> OR </p>
            <label for="selectCsv" class="form-control-label">Select Upload File Type</label>
            <select id="selectCsv" class="form-select">
                <option selected value="none">--Select File Type--</option>
                <option value="NID">NID</option>
                <option value="BCF">BCF</option>
            </select>
            <form class="form-control-label" id="csvFileUploadId" enctype="multipart/form-data">
                <label for="wDataFile" class="form-control-label">Upload a csv file :</label>
                <input class="form-control" type="file" id="wDataFile" name="wDataFile">
                <button class="btn btn-primary" disabled type="button" id="csvSubmitBtn">upload</button>
            </form>
        </div>
    </div>
</div>
<script src="/v1/public/js/wHome.front.js"></script>
<script id="subCategoryT" type="text/x-handlebars-template">

                        \{{#each subCategory}}
                            <option value="\{{id}}">\{{title}}</option>
                        \{{/each}}
</script>
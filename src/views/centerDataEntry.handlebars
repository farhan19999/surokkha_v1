<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3"><br>Vaccination Data Entry</h4>
            <form id="entryFormId">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="reg_id" class="form-label">Registration Id :</label>
                        <input type="number" class="form-control" id="reg_id" name="reg_id" placeholder="">
                    </div>
                    <div id="nidCol" class="col-sm-6"   style="width: 300px;">
                        <label for="nid" class="form-label" >NID Number :</label>
                        <input type="number" id="nid" name="nid" class="form-control"
                               placeholder="Example - 19825624603112948" maxlength="13" autocomplete="off">
                    </div>
                    <div id="bcfCol" class="col-sm-6"  style="width: 300px;">
                        <label for="bcf" class="form-label" >Birth Registration Number :</label>
                        <input type="number" id="bcf" name="bcf" class="form-control"
                               placeholder="Example - 19825624603112948" maxlength="17" autocomplete="off">
                    </div>
                    <div id="dobCol" class="col-sm-6" style="width: 300px;" >
                        <label for="dob" class="form-label" >Date of Birth :</label>
                        <input type="date" class="form-control" id="dob" name="dob">
                    </div>

                    <div  class="col-sm-6" style="width: 300px;" >
                        <label for="givenDate" class="form-label" >Vaccine Administration Date :</label>
                        <input type="date" class="form-control" id="gDate" name="gDate">
                    </div>
                    <div class="col-sm-6" style="width: 300px;" >
                        <label for="vaccineId" class="form-label">Administered Vaccine :</label>
                        <select id="vaccineId" name="vaccineId" class="form-select form-control"  >
                            <option selected>--Select--</option>
                            {{#each vaccine}}
                                <option value="{{VACCINE_ID}}">{{VACCINE_NAME}}({{MANUFACTURER}})</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-sm-6" style="width: 300px;" >
                        <label for="dose_no" class="form-label">Administered Dose no :</label>
                        <select id="dose_no" name="dose_no" class="form-select form-control"  >
                            <option selected>--Select--</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div class="col-sm-6" style="width: 300px;">
                        <label for="batch_no" class="form-label" >Vaccine Batch No :</label>
                        <input type="text" class="form-control" id="batch_no" name="batch_no">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <hr>
            <p align="center"> OR </p>
            <form class="form-control-label" id="csvFileUploadId" enctype="multipart/form-data">
                <label for="centerDataFile">Upload a csv file :</label>
                <input type="file" id="centerDataFile" name="centerDataFile">
                <button class="btn btn-primary" type="submit">upload</button>
            </form>
        </div>
    </div>
</div>
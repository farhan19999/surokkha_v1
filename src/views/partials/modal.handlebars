<div class="modal" tabindex="-1" id="modalId" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{partials.table.tableName}}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="{{partials.table.tableName}}Form">
                    {{#each partials.formData}}
                        <div class="mb-3">
                            <label for="{{name}}" class="form-label">{{label}}</label>
                            <input type="{{type}}"  class="form-control" id="{{name}}" name="{{name}}" {{prop}}>
                        </div>
                    {{/each}}
                    <button type="submit" class="btn btn-primary" hidden>Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button id="modal-close-id" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="modal-save-id" type="button" class="btn btn-primary">Save changes</button>
                <button id="modal-insert-id" type="button" class="btn btn-primary">Insert</button>
            </div>
        </div>
    </div>
</div>
